---
// COMPONENTE: Card.astro
// Una tarjeta para mostrar un resumen de una nota en la galería de la página de inicio.

import type { CollectionEntry } from 'astro:content';

type Props = {
  entry: CollectionEntry<'vault'>;
}

const { entry } = Astro.props;
const { title, description, imgHero } = entry.data;
---
<a href={`/${entry.slug}`} class="card">
  {imgHero && (
    <img src={imgHero} alt={`Imagen para ${title}`} width="300" height="150" />
  )}
  <div class="text-content">
    <h3>{title}</h3>
    <p>{description || 'Sin descripción.'}</p>
  </div>
</a>
<style>
  .card {
    display: block;
    border: 1px solid var(--gray-light);
    border-radius: 8px;
    overflow: hidden;
    text-decoration: none;
    color: inherit;
    background: white;
    box-shadow: 0 2px 4px rgba(var(--black), 5%);
    transition: transform 0.2s ease, box-shadow 0.2s ease;
  }
  .card:hover {
    transform: translateY(-3px);
    box-shadow: var(--box-shadow);
  }
  .card img {
    width: 100%;
    height: 150px;
    object-fit: cover;
    border-bottom: 1px solid var(--gray-light);
  }
  .text-content {
    padding: 1rem;
  }
  .text-content h3 {
    margin: 0 0 0.5rem 0;
    font-size: 1.2em;
  }
  .text-content p {
    margin: 0;
    font-size: 0.9em;
    color: var(--gray);
  }

  /* Dark mode */
  :global(.dark) .card {
    background: rgb(50 50 50);
    border-color: rgb(var(--gray-light));
  }
  :global(.dark) .text-content h3 {
    color: white;
  }
  :global(.dark) .text-content p {
    color: rgb(var(--white));
  }
</style>
